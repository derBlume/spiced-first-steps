/*works with a linkebreak*/
* {
    margin: 0;
}

body {
    background-color: rgb(175, 183, 192);
}
header {
    position: relative;
    height: 50px;
    padding: 10px;
    background-color: white;
}

.logo {
    height: 50px;
    position: absolute;
}

.menu-button {
    height: 50px;
    position: absolute;
    right: 0px;
}

.bigPicture {
    background-image: url("assets/spices.jpg");
    background-size: cover;
    height: 300px;
    color: white;
    margin-bottom: 20px;
    position: relative;
}

.headline {
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

h2 {
    border-width: 3px;
    border-style: solid;
    border-radius: 30px;
    background-color: yellow;
    border-color: tomato;
    color: tomato;
    display: inline-block;
    padding: 10px;
    margin-top: 10px;
}

article {
    width: 310px;
    display: inline-block;
    padding: 5px;
    position: relative;
}

.icon {
    width: 50px;
    padding-right: 10px;
    position: relative;
    top: 0 px;
    right: 0 px;
    display: inline-block;
}

.description {
    position: relative;
    left: 60px;
    bottom: 60px;
    width: 250px;
    display: inline-block;
}

main {
    position: relative;
    left: 50%;
    transform: translate(-50%);
    display: inline-block;
}
